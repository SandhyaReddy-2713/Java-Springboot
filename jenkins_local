pipeline {
    agent any
    triggers {
        //pollscm for every 1min
        #pollSCM('H/1 * * * *')
        //build periodically for every specific time
        cron('H/1 * * * *')
    }
    stages {
        stage('git checkout') {
            steps {
                git 'https://github.com/SandhyaReddy-2713/Java-Springboot.git'
            }
        }
        stage('build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('test') {
            steps {
                echo 'this is test phase'
            }
        }
        stage('deploy') {
            steps {
                echo 'this is deploy phase'
            }
        }
    }
}

       